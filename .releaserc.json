{
  "branches": ["main"],
  "plugins": [
    [
      "@semantic-release/commit-analyzer",
      {
        "preset": "conventionalcommits",
        "releaseRules": [
          {
            "type": "build",
            "release": "patch"
          }
        ]
      }
    ],
    [
      "@semantic-release/release-notes-generator",
      {
        "preset": "conventionalcommits",
        "presetConfig": {
          "types": [
            {
              "type": "feat",
              "section": "Features"
            },
            {
              "type": "fix",
              "section": "Bug Fixes"
            },
            {
              "type": "build",
              "section": "Build Updates",
              "hidden": false
            }
          ]
        }
      }
    ],
    [
      "@semantic-release/github",
      {
        "assets": ["dist/**/*"]
      }
    ],
    [
      "@semantic-release/npm",
      {
        "npmPublish": true
      }
    ]
  ]
}
