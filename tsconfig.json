{
  "compilerOptions": {
    "target": "ES2019",
    "rootDir": ".",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": ["src", "tests"],
  "exclude": ["dist", "node_modules"]
}
