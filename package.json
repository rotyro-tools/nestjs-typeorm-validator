{
  "name": "@rotyro-tools/nestjs-typeorm-validator",
  "license": "MIT",
  "version": "1.0.0",
  "description": "Lightweight NestJS decorators to validate data against TypeORM entities.",
  "author": "rotyro <rotyro.tools@gmail.com> (https://github.com/rotyro)",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rotyro-tools/nestjs-typeorm-validator.git"
  },
  "bugs": {
    "url": "https://github.com/rotyro-tools/nestjs-typeorm-validator/issues",
    "email": "rotyro.tools@gmail.com"
  },
  "homepage": "https://github.com/rotyro-tools/nestjs-typeorm-validator#readme",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsup",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:ci": "jest --ci --coverage",
    "coverage:open": "open coverage/lcov-report/index.html",
    "lint": "eslint \"{src,tests}/**/*.ts\"",
    "format": "prettier --write \"{src,tests}/**/*.ts\"",
    "format:check": "prettier --check \"{src,tests}/**/*.ts\"",
    "release": "semantic-release",
    "prepare": "husky",
    "cm": "cz"
  },
  "keywords": [
    "nestjs",
    "decorators",
    "nestjs-decorators",
    "nestjs-validation",
    "typeorm",
    "typeorm-validation",
    "class-validator",
    "class-validator-decorators",
    "entity",
    "entity-validation",
    "table",
    "validation",
    "validation-decorators",
    "unique",
    "exists",
    "database",
    "orm"
  ],
  "files": [
    "dist",
    "README.md",
    "LICENSE.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {
    "class-validator": "^0.14.0",
    "typeorm": "^0.3.0"
  },
  "peerDependenciesMeta": {
    "class-validator": {
      "optional": false
    },
    "typeorm": {
      "optional": false
    }
  },
  "dependencies": {
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/github": "^12.0.1",
    "@semantic-release/npm": "^13.1.1",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^25.0.0",
    "@typescript-eslint/eslint-plugin": "^8.46.3",
    "@typescript-eslint/parser": "^8.46.0",
    "class-validator": "^0.15.1",
    "commitizen": "^4.3.1",
    "conventional-changelog-conventionalcommits": "^9.1.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "install": "^0.13.0",
    "jest": "^30.2.0",
    "jiti": "^2.6.1",
    "npm": "^11.6.2",
    "prettier": "^3.6.2",
    "semantic-release": "^25.0.1",
    "ts-jest": "^29.4.5",
    "ts-node": "^10.9.2",
    "tsup": "^8.5.0",
    "typeorm": "^0.3.27",
    "typescript": "^5.9.3"
  },
  "overrides": {
    "picomatch": "4.0.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
